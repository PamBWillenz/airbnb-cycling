<div id="reservation-form">  
  <div id="calendar", style='width: 600px;'></div>

  <script type="text/javascript">
    $('#calendar').fullCalendar({
      events: '/reservations.json'
    });
  </script> 

<div>
  <%= @reservations.each do |reservation| %>
    <p><%= reservation.start_date.strftime("%m/%d/%Y") %></p>

  </div>
  <p><%= link_to "Cancel Reservation", cancel_reservation_path(reservation), data: { confirm: 'Are you sure?' } %></p>
  </div> 
</div>   
  <% end %>

